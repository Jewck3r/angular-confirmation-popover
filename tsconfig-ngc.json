{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "baseUrl": ".",
    "stripInternal": true,
    "outDir": "./dist/esm",
    "rootDir": "./",
    "inlineSources": true,
    "types": []
  },
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "./dist/esm",
    "skipTemplateCodegen": true,
    "trace": true
  },
  "exclude": [
    "test",
    "demo"
  ]
}
